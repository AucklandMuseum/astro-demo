---
import "styles/global.css";

import BaseHead from "components/BaseHead.astro";
import Meganav from "components/Meganav.astro";
import Footer from "components/Footer.astro";
import { TypePage } from "types/TypePage";
import { TypeContentSection } from "types/TypeContentSection";
import { FieldsType } from "contentful";

interface Props {
  page: FieldsType;
  section?: FieldsType;
}

const { page, section } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="lofi">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-149E0ZFVZ8"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-149E0ZFVZ8");
    </script>
    <BaseHead page={page} section={section} />
  </head>
  <body>
    <div class="mx-auto px-5 lg:px-16 2xl:px-0 max-w-7xl"><Meganav /></div>
    <slot />
    <script src="../../node_modules/preline/dist/preline.js"></script>
    <!-- Add lazyload library -->
    <script
      src="https://cdn.scaleflex.it/filerobot/js-cloudimage-responsive/lazysizes.min.js"
    ></script>

    <!-- Add js-cloudimage-responsiv library -->
    <script
      src="https://cdn.scaleflex.it/plugins/js-cloudimage-responsive/latest/js-cloudimage-responsive.min.js"
    ></script>

    <Footer />
  </body>
</html>
