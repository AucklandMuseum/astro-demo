---
import "styles/global.css";
import Themes from "astro-themes"
import ToggleTheme from "components/common/ToggleTheme.astro";
import BaseHead from "components/common/BaseHead.astro";
import BasicScripts from 'components/common/BasicScripts.astro';
import MegaNav from "components/vue/MegaNav.vue";
import { EntryCollection, EntrySkeletonType } from "contentful";
import * as contentfulUtils  from "lib/contentful";

interface Props {
  page: EntrySkeletonType;
  section?: EntrySkeletonType;
}

const { page, section } = Astro.props;

const topNav = await contentfulUtils.getMenuGroupMenuItemsByName("top");
const mainNav = await contentfulUtils.getMenuGroupMenuGroupsByName("main");

---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead page={page} section={section} />
    <Themes  />
    <!-- Google tag (gtag.js) -->
    <script type="text/partytown" async src="https://www.googletagmanager.com/gtag/js?id=G-149E0ZFVZ8"
    ></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-149E0ZFVZ8");
    </script>

  </head>
  <body class="bg-white dark:text-slate-300 dark:bg-black">
    <!-- <ToggleTheme /> -->
    <MegaNav client:load topNavItems={topNav} navItems={mainNav} />
    <slot />
    <BasicScripts />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>

