---
import BaseLayout from "../layouts/BaseLayout.astro";

import { contentfulClient } from "../lib/contentful";
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import { BLOCKS } from '@contentful/rich-text-types';
import type { hero } from "../lib/contentful";

let page;
const { slug } = Astro.params;
try {
  const data = await contentfulClient.getEntries<hero>({
    content_type: "marketingPanel",
    "fields.slug": slug,
  });
  const { title, content } = data.items[0].fields;

  const options = {
  renderNode: {
    [BLOCKS.EMBEDDED_ASSET]: (node:any ) => `<img src="${node.data.target.fields.file.url}"/>`
  }
};

page = {
    title,
    content: documentToHtmlString(content,options)
  };
} catch (error) {
  return Astro.redirect("/404");
}
---
<BaseLayout title={post?.title}>
    <h1>{post?.title}</h1>
    <time>{post?.publishDate}</time><br>
	<a class="btn">Click here</a>
    <article set:html={post?.content} />
</BaseLayout>