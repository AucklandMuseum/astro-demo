---
import BaseLayout from "layouts/BaseLayout.astro";
/*import Hero from "../components/vue/Hero.vue";*/
import Hero from "components/Hero.astro";
import { getPageByAltURL, getPageBySlug, getSectionByID } from "lib/contentful";
import type { TypePage, TypeContentSection } from "types/index";
import type { Entry } from "contentful";

let page: Entry<TypePage> = await getPageBySlug("home");
let section: Entry<TypeContentSection>;
if (page.fields.parentSiteSection) {
  section = await getSectionByID(
    page.fields.parentSiteSection.sys.id
  );
}
---

<BaseLayout page={page} section={section}>
  <Hero
    image="https://ajrctguoxo.cloudimg.io/v7/https%3A%2F%2Fwww.aucklandmuseum.com%2Fgetmedia%2Fd3403c58-c000-4d6f-900d-82039ce572db%2FAM_Secrets_of_Stonehenge_WEB_1348x759px.jpg?w=1500&h=833&org_if_sml=1&ci_url_encoded=1&force_format=webp%2Cjpeg&func=cropfit&gravity=face"
    title="Secrets of Stonehenge"
    subtitle="Ancient mysteries. Recent discoveries."
    boldSubtitle="Now open"
    content="<p>Delve into the science, history and mythology of Stonehenge - discover the secrets of what it meant to the people who built it, and what it means to the world today.</p><p><a class='btn reverse' href='/Visit/Exhibitions/Secrets-of-Stonehenge' target='_self'>Learn more</a></p>"
    contentBehaviour="right"
  />
  <Hero
    image="https://ajrctguoxo.cloudimg.io/v7/https%3A%2F%2Fwww.aucklandmuseum.com%2Fgetmedia%2F4c6c0d02-6ef8-418b-b140-2686f61ca77a%2FAM_WEB_TREX2_1348x759px.jpg?org_if_sml=1&ci_url_encoded=1&force_format=webp%2Cjpeg&func=cropfit&gravity=face"
    title="Double trouble"
    subtitle="Huge news"
    boldSubtitle="TE AO MÄ€RAMA SOUTH ATRIUM"
    content="<p>First there was Peter, now meet Barbara. Don't miss two of the rarest, real T. rex skeletons ever discovered in a world-first only at Auckland Museum.</p><p><a class='btn reverse' href='https://www.aucklandmuseum.com/visit/exhibitions/trex-peter' target='_self'>Learn more</a></p>"
    contentBehaviour="left"
  />
</BaseLayout>
