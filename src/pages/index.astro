---
import { contentfulClient } from "../lib/contentful";
import type { menuGroup } from "../lib/contentful";
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import previewImage from "/itemPreview.png";
import Hero from "../components/Hero.astro";

export const prerender = true;

const entries = await contentfulClient.getEntries<menuGroup>({
  content_type: "menuGroup",
});

const menu = entries.items.map((item) => {
	const { name, title } = item.fields;

  return {
	name,
    title,
  };
});
---
<BaseLayout>
	<Hero></Hero>
  
	  {
		menu.map((menu) => (
		  <HorizontalCard
			title={menu.name}
			img={previewImage}
			target="_self"
		  />
		  <div class="divider my-0"></div>
		))
	  }

</BaseLayout>
