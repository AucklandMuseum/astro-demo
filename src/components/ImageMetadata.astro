---
import * as contentful from "contentful";
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";

const { imageTitle, imageCaption, imageMedia, size } = Astro.props;
---

<figure>
	<img class={"image" + size} src={imageMedia.fields.file.url} alt={imageCaption} />
</figure>

<style>
	img {
		@apply h-full w-auto overflow-hidden
	}
</style>