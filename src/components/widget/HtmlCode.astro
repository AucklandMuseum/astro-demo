---
let { htmlContent, parent, parentStyle } = Astro.props;
---

<article
  class="prose max-w-none prose-blockquote:text-xl prose-blockquote:text-gray-400 prose-img:m-auto prose-figure:bg-gray-100 prose-figcaption:bg-gray-100 prose-figcaption:mt-0 prose-figcaption:px-5 prose-figcaption:pb-5 prose-figcaption:prose-p:mt-0"
  set:html={htmlContent}
/>

<link
  rel="stylesheet"
  href="https://cdn.scaleflex.it/plugins/js-cloudimage-responsive/latest/js-cloudimage-responsive.min.css?vh=a076ef&func=proxy"
/>
<script
  src="https://cdn.scaleflex.it/plugins/js-cloudimage-responsive/latest/js-cloudimage-responsive.min.js"
></script>
<script>
  const ciResponsive = new window.CIResponsive({
    token: "ajrctguoxo",
  });
</script>

<link type="text/css" rel="stylesheet" href="../src/lib/lightGallery/css/lightgallery-bundle.css" />
<script is:inline src="../src/lib/lightGallery/lightgallery.min.js"></script>
<script is:inline
  src="../src/lib/lightGallery/plugins/thumbnail/lg-thumbnail.min.js"
></script>
<script is:inline src="../src/lib/lightGallery/plugins/zoom/lg-zoom.min.js"
></script>
<script is:inline src="../src/lib/lightGallery/plugins/relativeCaption/lg-relative-caption.min.js"
></script>

<script  is:inline>
var galleries = document.getElementsByClassName('gallery');
for (let item of galleries) {
    lightGallery(item, {
      plugins: [lgZoom, lgThumbnail, lgRelativeCaption],
    subHtmlSelectorRelative: true,
    })
}
</script>

<style is:inline>
  .caption,
  .credit,
  .copyright,
  .other {
    font-size: small;
  }
  .credit,
  .copyright,
  .other {
    color: #999;
  }
  .story--content,
  .pullout {
    background: transparent
      url("data: image/png;base64,")
      no-repeat 0 0;
    border: 0;
    color: #777;
    font-size: large;
    font-style: normal;
    margin: 0 0 10px;
    padding: 10px 60px;
  }
  blockquote {
    border: 0;
    margin: 0 0 20px;
    padding: 9px 20px 0 19px;
  }
  blockquote cite {
    color: #555;
    display: block;
    font-size: small;
    font-style: normal;
  }
  blockquote cite:before {
    content: "\2014 \0020";
  }
  blockquote p {
    margin-top: 0 !important;
  }
  figure.right,
  figure.left {
    @media (min-width: 800px) {
      width: 37.5%;
      max-width: 400px;
    }
  }
  figure.right {
    @media (min-width: 800px) {
      clear: right;
      float: right;
      margin-left: 1em;
      margin-top: 0 !important;
      margin-bottom: 0 !important;
    }
  }
  figure.left {
    @media (min-width: 800px) {
      clear: left;
      float: left;
      margin-right: 1em;
      margin-top: 0 !important;
      margin-bottom: 0 !important;
    }
  }
  figcaption {
    padding: 10px !important;
  }
  figcaption p {
    margin-bottom: 7px !important;
    margin-top: 0 !important;
  }

  .gallery{
    display: block;
  }
  .gallery a {
    height: 100px !important;
    display: inline-block;
  }
  .gallery img {
    height: 100px !important;
    width: auto !important;
    margin: 0;
    margin-right: 15px;
    margin-bottom: 15px;
    vertical-align: top;
  }
  .gallery .caption {display: none;}
</style>
