---
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";

let { content, contentStyle = "Standard", parent, parentStyle } = Astro.props;
---

<div
	class:list={[
		"prose","copy",
		"copy" + contentStyle,
		"copy" + parent,
		"copy" + parentStyle,
	]}
	set:html={documentToHtmlString(content).replace(/\n/g, `</br>`)}
/>

<style>
	hr {
		@apply border-t-4
	}
	.copy {
		
	}
	.copyStandard{
		@apply prose max-w-none w-full
	}
	.copyLight {
		@apply prose text-black
	}
	.copyDark {
		@apply prose-invert
	}
	.copyLarge {
		@apply prose-xl md:prose-2xl leading-tight;
	}
	.copySmall {
		@apply prose-sm;
	}	
	.copyheroLarge {
		@apply mt-2 lg:mt-5 xl:mt-10 xl:text-xl
	}
	.copyRightPanel {
		@apply justify-end
	}
</style>
