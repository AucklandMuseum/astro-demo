---
const { title, subtitle, boldSubtitle, parent, parentStyle, colorOverride } = Astro.props;

const overrideColorStyle = colorOverride == "" ? "" : "color: " + colorOverride;
---
<div class="max-w-full">
<div class:list={["title", "title" + parentStyle, "title" + parent]}>
  <div class:list={["boldSubtitle", "boldSubtitle" + parentStyle, "boldSubtitle" + parent]} set:html={Astro.props.boldSubtitle} />
  <h3 set:html={subtitle} style={overrideColorStyle} />
  <div>
    <h1 set:html={title} style={overrideColorStyle} />
  </div>
</div>
</div>
<style>
  .title {
    @apply mx-auto px-5 lg:px-16 2xl:px-0 max-w-7xl;
  }
  
  h1 {
    @apply text-inherit font-normal lg:font-thin text-4xl md:text-5xl lg:text-6xl lg:leading-tight;
  }
  h3 {
    @apply font-thin text-gray-400 text-3xl md:text-4xl lg:text-5xl lg:leading-tight;
  }

  .boldSubtitleSection {
    @apply mb-10 font-bold uppercase
  }
  .titleLight {
    @apply text-black;
  }
  .titleDark {
    @apply text-white;
  }

</style>

