---
import * as contentful from "contentful";
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";

let { content, contentStyle, parent, parentStyle } = Astro.props;
---

<div
	class:list={[
		"prose","copy",
		"copy" + contentStyle,
		"copy" + parent,
		"copy" + parentStyle,
	]}
	set:html={documentToHtmlString(content)}
/>

<style>
	hr {
		@apply border-t-4
	}
	.copy {
		@apply max-w-none w-full
	}
	.copyStandard{
		@apply prose
	}
	.copyLight {
		@apply prose text-black
	}
	.copyDark {
		@apply prose-invert
	}
	.copyLarge {
		@apply prose-2xl leading-tight;
	}
	.copySmall {
		@apply prose-sm;
	}	
	.copyHeroLarge {
		@apply mt-14;
	}
	.copyRightPanel {
		@apply justify-end
	}
</style>
