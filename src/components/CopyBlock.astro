---
import * as contentful from "contentful";
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";

let { content, contentStyle, parent, parentStyle } = Astro.props;
---

<div
	class:list={[
		"prose",
		"copy" + contentStyle,
		"copy" + parent,
		"copy" + parentStyle,
	]}
	set:html={documentToHtmlString(content)}
/>

<style>
	.copy {
	}
	.copyLight {
		@apply text-black;
	}
	.copyDark {
		@apply text-white;
	}
	.copyLarge {
		@apply prose-2xl max-w-full leading-tight;
	}
	.copyHeroLarge {
		@apply mt-14;
	}
	.copyRightPanel {
		@apply m-auto;
	}
</style>
