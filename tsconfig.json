{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": "src/",
    "paths": {
      "components/*": ["components/*"],
      "layouts/*": ["layouts/*"],
      "lib/*": ["lib/*"],
      "styles/*": ["styles/*"],
      "types/*": ["types/*"],
    },
    "jsx": "preserve",
    "jsxImportSource": "react",
    "allowJs": true,
    "types": ["vite/client"]
  }
}